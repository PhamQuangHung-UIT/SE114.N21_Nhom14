<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextLarge" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextSmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="Setting_button" parent="Widget.Material3.TabLayout">
        <item name="background">@color/setting_button_color_light</item>
        <item name="android:textAppearance">@style/TextLarge</item>
    </style>
    <style name="OptionsDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="background">@drawable/popup_background</item>
    </style>
    <style name="RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/grey</item>
        <item name="android:textAppearance">@style/TextLarge</item>
    </style>
</resources>