<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transition_startLoading"
        motion:constraintSetEnd="@+id/endLoading"
        motion:constraintSetStart="@id/startLoading"
        motion:duration="1000"
        motion:motionInterpolator="linear"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/button_CommitComment"
               motion:framePosition="50"/>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/startLoading">
        <Constraint
            android:id="@+id/button_CommitComment"
            android:rotation="0"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="48dp"
            android:layout_marginTop="0dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/endLoading">
        <Constraint
            android:id="@+id/button_CommitComment"
            android:rotation="360"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="48dp" />
    </ConstraintSet>
</MotionScene>