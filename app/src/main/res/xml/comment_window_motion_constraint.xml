<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/transitionShowComment"
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/start"
        motion:duration="500"
        motion:motionInterpolator="easeOut"/>
    <Transition
        android:id="@+id/transitionCloseComment"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:motionInterpolator="easeOut"
        motion:duration="500"
        motion:layoutDuringTransition="ignoreRequest">
        <OnSwipe
            motion:touchAnchorId="@+id/motionSwipeArea"
            motion:touchAnchorSide="middle"
            motion:dragDirection="dragDown"/>
        <KeyFrameSet>
            <KeyPosition
                motion:motionTarget="@id/layout_ShowCourseDetail"
                motion:sizePercent="0"/>
        </KeyFrameSet>
    </Transition>


    <!--START PHASE-->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/motionSwipeArea"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/fragmentContainerView_ShowComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/motionSwipeArea"/>
        <Constraint
            android:id="@+id/commentViewHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/unfocused_background"/>
        </Constraint>
        <Constraint
            android:id="@+id/constraintLayout_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/linearHeaderCourseActivity"/>
        <Constraint
            android:id="@+id/editText_WriteComment"
            android:visibility="visible"/>
    </ConstraintSet>

    <!--END PHASE-->
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/motionSwipeArea"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            motion:layout_constraintTop_toBottomOf="@id/constraintLayout_ShowComment"
            motion:layout_constraintStart_toStartOf="@id/constraintLayout_ShowComment"
            motion:layout_constraintEnd_toEndOf="@id/constraintLayout_ShowComment"/>
        <Constraint
            android:id="@+id/fragmentContainerView_ShowComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="parent"/>
        <Constraint
            android:id="@+id/commentViewHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/transparent"/>
        </Constraint>
        <Constraint
            android:id="@+id/constraintLayout_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="@id/constraintLayout_ShowComment"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/linearHeaderCourseActivity"/>
    </ConstraintSet>
</MotionScene>