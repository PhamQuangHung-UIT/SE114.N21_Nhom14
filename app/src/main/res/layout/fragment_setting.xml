<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TITLE BAR -->
    <LinearLayout
        android:id="@+id/linearTitleSettingFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/green">

        <!-- TITLE CLASS NAME -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/setting_fragment_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            tools:ignore="TextContrastCheck" />

        <!-- NOTIFICATION BUTTON -->
        <ImageButton
            android:id="@+id/buttonNotifySettingFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:contentDescription="@string/notification_title"
            android:padding="15dp"
            android:src="@drawable/baseline_notifications_active_24"
            app:tint="@color/white"
            tools:ignore="ImageContrastCheck" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageAvatarSettingFragment"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/linearTitleSettingFragment"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:foreground="@drawable/crop_frame"
        android:src="@drawable/account_icon"
        android:scaleX="0.8"
        android:scaleY="0.8"
        tools:ignore="ContentDescription,ImageContrastCheck"
        app:tint="@color/green" />

    <LinearLayout
        android:id="@+id/accountManagerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageAvatarSettingFragment"
        android:layout_alignBottom="@+id/imageAvatarSettingFragment"
        android:layout_toEndOf="@+id/imageAvatarSettingFragment"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textFullnameSettingFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/ex_name"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/textEmailSettingFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/ex_email"
            android:textColor="@color/dark_grey"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageAvatarSettingFragment"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/divider_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/display_setting_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            />
        <RelativeLayout
            android:id="@+id/buttonLanguageSettingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/imageIconLanguageSettingFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/language"
                android:src="@drawable/language_icon"
                android:padding="20dp"
                app:tint="@color/green"
                tools:ignore="ImageContrastCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imageIconLanguageSettingFragment"
                android:layout_alignTop="@+id/imageIconLanguageSettingFragment"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:text="@string/language"
                android:textColor="@color/dark_grey"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageIconLanguageSettingFragment"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/imageIconLanguageSettingFragment"
                android:fontFamily="@font/montserrat"
                android:text="@string/current_language"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>