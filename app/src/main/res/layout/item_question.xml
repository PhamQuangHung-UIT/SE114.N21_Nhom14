<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_light_white">

    <TextView
        android:id="@+id/textNumberItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:text="@string/lable_question_number"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textContentItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="@string/text_question"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"/>

    <RadioButton
        android:id="@+id/radioFirstItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/text_answer"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        tools:ignore="DuplicateSpeakableTextCheck,VisualLintButtonSize" />

    <RadioButton
        android:id="@+id/radioSecondItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text_answer"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:ignore="VisualLintButtonSize" />

    <RadioButton
        android:id="@+id/radioThirdItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text_answer"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:ignore="VisualLintButtonSize" />

    <RadioButton
        android:id="@+id/radioLastItemQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/text_answer"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:ignore="VisualLintButtonSize" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_horizontal_rule_24"
        app:tint="@color/dark_grey"
        android:scaleX="10"
        android:scaleY="0.5"
        tools:ignore="ContentDescription" />

</LinearLayout>