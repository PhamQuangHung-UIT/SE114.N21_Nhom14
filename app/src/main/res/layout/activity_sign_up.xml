<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/sign_up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/green"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:text="@string/sign_up_upper"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <!-- USER NAME -->
    <TextView
        android:id="@+id/titleTextUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up_title"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/hint_username"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry,TextSizeCheck,TextContrastCheck" />
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextUsername"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="#F0F0F0"
        android:hint="@string/hint_username"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        tools:ignore="DuplicateSpeakableTextCheck,LabelFor,RtlSymmetry,VisualLintTextFieldSize,TextContrastCheck" />

    <!-- PASS WORD -->
    <TextView
        android:id="@+id/titleTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextUsername"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/hint_password"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry,TextSizeCheck,TextContrastCheck" />
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextPassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="@color/light_grey"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        tools:ignore="DuplicateSpeakableTextCheck,LabelFor,RtlSymmetry,VisualLintTextFieldSize,TextContrastCheck" />

    <!-- RE PASS WORD -->
    <TextView
        android:id="@+id/titleTextRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:fontFamily="@font/montserrat_bold"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/hint_repassword"
        android:textColor="@color/dark_grey"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry,TextSizeCheck,TextContrastCheck" />
    <EditText
        android:id="@+id/editTextRePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextRePassword"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:autofillHints=""
        android:background="@color/light_grey"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat"
        tools:ignore="DuplicateSpeakableTextCheck,LabelFor,RtlSymmetry,VisualLintTextFieldSize,TextContrastCheck" />

    <!-- ASK IF ALREADY HAS AN EXISTING ACCOUNT -->
    <LinearLayout
        android:id="@+id/layoutTextAskToLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/editTextRePassword"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/ask_if_have_account"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textAlignment="center"
            tools:ignore="SmallSp,TextContrastCheck,TextSizeCheck" />
        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/textLeadToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/log_in_style_u"
            android:textColor="@color/green"
            android:textSize="18sp"
            android:textAlignment="center"
            tools:ignore="SmallSp,TextContrastCheck,TextSizeCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/layoutTextAskToLogin"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/sign_up"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="VisualLintButtonSize,DuplicateSpeakableTextCheck,TextContrastCheck" />

</RelativeLayout>